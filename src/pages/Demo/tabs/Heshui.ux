<script>
import storage from '@system.storage'

export default {
  props: ['isActive'],
  data: {
    currentMonth: '',
    currentDay: '',
    waterAmount: 0,
    showModal: false,
    inputAmount: '',
    todayKey: ''
  },
  computed: {
    formattedAmount() {
      return (this.waterAmount || 0).toLocaleString()
    }
  },
  onInit() {
    const date = new Date()
    this.currentMonth = date.getMonth() + 1
    this.currentDay = date.getDate()
    // 生成今日的存储key
    this.todayKey = `water_data_${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`
    this.loadTodayWater()
    
    // 监听 isActive 变化
    this.$watch('isActive', 'onActiveChange')
  },
  onActiveChange(newVal) {
    if (newVal) {
      this.checkDateAndReload()
    }
  },
  onShow() {
    this.checkDateAndReload()
  },
  checkDateAndReload() {
    // 每次显示页面时检查日期，如果日期变了则重新加载
    const date = new Date()
    const newKey = `water_data_${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`
    if (newKey !== this.todayKey) {
      this.currentMonth = date.getMonth() + 1
      this.currentDay = date.getDate()
      this.todayKey = newKey
      this.waterAmount = 0
      this.loadTodayWater()
    }
  },
  // 加载今日饮水量
  loadTodayWater() {
    storage.get({
      key: this.todayKey,
      success: (data) => {
        if (data) {
          this.waterAmount = parseInt(data) || 0
        } else {
          this.waterAmount = 0
        }
      },
      fail: () => {
        this.waterAmount = 0
      }
    })
  },
  // 保存今日饮水量
  saveTodayWater() {
    storage.set({
      key: this.todayKey,
      value: this.waterAmount.toString()
    })
  },
  openModal() {
    this.showModal = true
    this.inputAmount = ''
  },
  closeModal() {
    this.showModal = false
  },
  updateInput(evt) {
    this.inputAmount = evt.value
  },
  confirmWater() {
    const amount = parseInt(this.inputAmount)
    if (!isNaN(amount) && amount > 0) {
      this.waterAmount += amount
      this.saveTodayWater()
    }
    this.closeModal()
  }
}
</script>

