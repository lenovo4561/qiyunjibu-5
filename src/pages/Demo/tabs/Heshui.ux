            <div class="input-wrapper">
              <input class="modal-input" type="number" placeholder="请输入本次饮水量" value="{{inputAmount}}" onchange="updateInput"></input>
              <text class="input-unit">ml</text>
            </div>
            <div class="modal-btns">
              <div class="modal-btn cancel-btn" onclick="closeModal">
                <text class="btn-text-black">取消</text>
              </div>
              <div class="modal-btn confirm-btn" onclick="confirmWater">
                <text class="btn-text-white">喝水</text>
              </div>
            </div>
          </div>
        </div>

